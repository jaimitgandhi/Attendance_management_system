@model IEnumerable<MVCProject.Models.Student>

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Of Students</h2>

@using (Html.BeginForm("StudentList", "Faculties"))
{
    <div>
        Search By Name:@Html.TextBox("searchstring")
        <input id="Submit1" type="submit" value="Filter" />
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dept.Name)
        </th>
        <th>
           @* @Html.DisplayNameFor(model => model.Name) *@
            @Html.ActionLink("Name", "StudenttList", new { sortorder = ViewBag.StudentName })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
           @* @Html.DisplayNameFor(model => model.Attendance)*@
            @Html.ActionLink("Attendance", "StudenttList", new { sortorder = ViewBag.StudentAttendance })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDays)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dept.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attendance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDays)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Stud_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Stud_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Stud_Id })
        </td>
    </tr>
}

</table>
