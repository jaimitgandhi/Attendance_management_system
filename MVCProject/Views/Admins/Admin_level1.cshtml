@model MVCProject.ViewModel.NewFacultyViewModel

@{
    ViewBag.Title = "Admin_level1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin_level1</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm1">
            @using (Html.BeginForm("Submit", "Admins", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ActionLink("List of Faculties","FacultyList")<br />
                <h4>Add new Faculty.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.faculty.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.faculty.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.faculty.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.faculty.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.faculty.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.faculty.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.faculty.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.faculty.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.faculty.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.faculty.Dept_Id, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.faculty.Dept_Id, new SelectList(Model.department, "Dept_Id", "Name"), "Select List", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.faculty.Dept_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            }
            @using (Html.BeginForm("Logout", "Admins", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Logout" class="btn btn-info" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
